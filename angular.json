{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-tethys": {
      "root": "src",
      "projectType": "library",
      "sourceRoot": "src",
      "prefix": "thy",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "tsConfig": "src/tsconfig.lib.json",
            "project": "src/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "src/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": ["zone.js", "zone.js/testing"],
            "codeCoverage": true,
            "codeCoverageExclude": ["/src/testing/**/*", "src/**/test/**/*", "src/markdown/*"],
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    },
    "site": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "site",
      "sourceRoot": "site/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": {
              "base": "dist/site",
              "browser": ""
            },
            "index": "site/src/index.html",
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "site/tsconfig.app.json",
            "stylePreprocessorOptions": {
              "includePaths": ["./site/src/styles"]
            },
            "assets": [
              "site/src/favicon.ico",
              "site/src/assets",
              {
                "glob": "**/*",
                "input": "./node_modules/@tethys/icons",
                "output": "/assets/icons/"
              }
            ],
            "styles": ["site/src/styles.scss"],
            "scripts": [],
            "extractLicenses": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true,
            "browser": "site/src/main.ts",
            "allowedCommonJsDependencies": [
              "to-factory",
              "docsearch.js",
              "hogan.js",
              "algoliasearch/lite",
              "autocomplete.js",
              "autocomplete.js/zepto"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "site/src/environments/environment.ts",
                  "with": "site/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "development": {
              "sourceMap": true,
              "namedChunks": true,
              "extractLicenses": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "port": 8888,
            "buildTarget": "site:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "site:build:production"
            },
            "development": {
              "buildTarget": "site:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "site:build"
          }
        }
      }
    },
    "cdk": {
      "projectType": "library",
      "root": "cdk",
      "sourceRoot": "cdk",
      "prefix": "thy",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "tsConfig": "cdk/tsconfig.lib.json",
            "project": "cdk/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "cdk/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "main": "cdk/test.ts",
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "cdk/tsconfig.spec.json",
            "karmaConfig": "cdk/karma.conf.js",
            "codeCoverage": true,
            "codeCoverageExclude": ["/cdk/testing/**/*", "cdk/**/test/**/*"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["cdk/**/*.ts", "cdk/**/*.html"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "320b41d2-079c-4f3e-9bb4-38b51babf41c",
    "cache": {
      "enabled": false
    }
  },
  "schematics": {
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    },
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
