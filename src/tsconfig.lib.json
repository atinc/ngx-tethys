{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/tethys",
    "rootDir": ".",
    "baseUrl": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["ng-dev-mode"],
    "lib": ["dom", "ES2020"],
    "paths": {
      "ngx-tethys/*": ["./*"],
      "@tethys/cdk/*": ["../cdk/*"]
    }
  },
  "exclude": ["test.ts", "*/test/*.ts", "**/*.spec.ts", "**/examples/**"]
}
