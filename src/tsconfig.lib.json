{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/tethys",
    "module": "es2015",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": [
      "ng-dev-mode"
    ],
    "lib": [
      "dom",
      "ES2020"
    ],
    "paths": {
      "ngx-tethys/*": [
        "dist/ngx-tethys/*"
      ],
      "@tethys/cdk/*": [
        "dist/cdk/*"
      ]
    }
  },
  "exclude": ["test.ts", "*/test/*.ts", "**/*.spec.ts", "**/examples/**"]
}
