{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["ng-dev-mode"],
    "paths": {
      "ngx-tethys": ["../src/public-api"],
      "ngx-tethys/*": ["../src/*"],
      "@tethys/cdk/*": ["../cdk/*"]
    }
  },
  "angularCompilerOptions": {
    "skipLibCheck": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
